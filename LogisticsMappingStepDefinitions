package com.mercedes.oal.stepDefinitions;

import org.openqa.selenium.WebDriver;

import com.mercedes.oal.factory.BaseClass;
import com.mercedes.oal.pageObjects.LandingPage;

import io.cucumber.java.en.Given;
import io.cucumber.java.en.Then;
import io.cucumber.java.en.When;

public class Logistics_Mapping {
	public WebDriver driver;
	LandingPage lp;

	@Given("the user is logged in as the local user")
	public void the_user_is_logged_in_as_the_local_user() throws InterruptedException {
		lp = new LandingPage(BaseClass.driver);
		lp.Logo_Displayed();
		Thread.sleep(2000);
		lp.usernameValidation();

	}

	@When("the user clicked on the master datatables")
	public void the_user_logged_in_with_the_details() throws InterruptedException {
		lp = new LandingPage(BaseClass.driver);
		lp.masterDataClick();
		System.out.println("User is on the logon with details");
	}

	@Then("the user clicks on Logistics Mapping")
	public void the_user_clicks_on_logistics_mapping() throws InterruptedException {

		lp = new LandingPage(BaseClass.driver);
		lp.clickingOnLogisticsMappingPage();
		System.out.println("User is on the ui screen with message");
	}

	@Then("the user clicks on New Mapping")
	public void the_user_clicks_on_new_mapping() throws InterruptedException {
		Thread.sleep(2000);
		lp = new LandingPage(BaseClass.driver);
		lp.newMappingCreation();
	}

	@Then("the user enter the values for all the fields and enter the date details")
	public void the_user_enter_the_values_for_all_the_fields_and_enter_the_date_details()
			throws InterruptedException {
		lp = new LandingPage(BaseClass.driver);
		lp.Value_Details();
	}
	
	@Then("clicks on Save button")
	public void clicks_on_save_button() {
		lp = new LandingPage(BaseClass.driver);
		lp.save_button();
	}

}
